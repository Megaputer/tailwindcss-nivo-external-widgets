{
    "compilerOptions": {
      "target": "es6",
      "module": "AMD",
      "sourceMap": true,
      "removeComments": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "noEmitHelpers": true,
      "skipLibCheck": true,
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "useUnknownInCatchVariables": false,
      "baseUrl": "./src",
      "jsx": "react-jsx",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "typeRoots": ["./node_modules/@types", "./src/@types", "./node_modules/pa-typings"]
    },
    "include": ["src"]
  }
